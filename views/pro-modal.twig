<div id="proModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Get support now!</h4>
      </div>
      <div class="modal-body">
        <form class="form-inline" action="/kalabox-pro/register/form" method="post" enctype="multipart/form-data">
          <input type="text" id="firstName" name="firstName" placeholder="First name" class="input-lg" required="true">
          <input type="text" id="lastName" name="lastName" placeholder="Last name" class="input-lg" required="true">
          <input type="email" id="email" name="email" placeholder="Your email address" class="input-lg" required="true">
          <input type="hidden" id="interval" name="interval" placeholder="Kalabox Pro subscription frequency" class="input-lg hidden">
          <button type="submit" class="btn btn-primary">Get Kalabox Support</button>
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->