        <form class="form-inline" action="form" method="post" enctype="multipart/form-data">
          <input type="text" id="keycode" name="keycode" placeholder="Enter keycode" class="input-lg">
          <button type="submit" class="btn btn-primary">Get Kalabox</button>
        </form>
      </div>

      <div class="container wow animated fadeInDown">
